<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sizeHeader_Height"
        android:id="@+id/relHeader"
        android:background="@drawable/background_boder_header_black"
        android:gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtHoTen"
            android:textSize="@dimen/sizeText_2"
            android:text="null"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:layout_marginLeft="@dimen/marginLeft_Text"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtTaiKhoan"
            android:textColor="@color/colorGreen_5"
            android:textSize="@dimen/sizeText_3"
            android:text="null"
            android:layout_marginLeft="@dimen/marginLeft_Text"
            android:layout_below="@+id/txtHoTen"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/imgIconAvatar"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_action_image"
                    android:layout_marginRight="@dimen/marginRight"
                    />

                <ImageView
                    android:id="@+id/imgThoat"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_item_logout"
                    android:layout_marginRight="@dimen/marginRight"
                    />
            </LinearLayout>
        </FrameLayout>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="12"
        android:layout_below="@id/relHeader"
        >

        <GridView
            android:layout_marginTop="@dimen/marginTop_Elements_ListView"
            android:layout_marginBottom="@dimen/marginTop_Elements_ListView"
            android:id="@+id/gvMessage"
            android:layout_width="match_parent"
            android:verticalSpacing="5dp"
            android:descendantFocusability="blocksDescendants"
            android:layout_height="match_parent"
            android:layout_weight="12" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/sizeHeight_Button_Retry"
            android:layout_weight="2"
            android:weightSum="13"
            android:orientation="horizontal">

            <EditText
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_edittext"
                android:layout_marginLeft="@dimen/marginLeft"
                android:drawableLeft="@drawable/ic_item_message"
                android:id="@+id/edtMessage"
                android:hint="Nội dung tin nhắn"
                android:layout_marginBottom="@dimen/marginTop_Elements_ListView"
                />
            <ImageView
                android:id="@+id/imgSend"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_item_send"
                android:layout_weight="11"
                android:layout_marginBottom="@dimen/marginTop_Elements_ListView"
                />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>