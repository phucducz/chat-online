<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">

            <!-- Set màu nền-->

            <solid
                android:color="@color/colorGreen_3" >
            </solid>

            <!-- đặt thuộc tính màu và độ rộng của đường viền -->
            <stroke
                android:width="1dp"
                android:color="@color/black" >
            </stroke>

            <!-- các thuộc tính căn chỉnh-->
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" >
            </padding>

            <!-- và đây là bán kính đường tròn ở 4 góc -->
            <corners
                android:radius="5dp" >
            </corners>

        </shape>
    </item>
    <item android:state_pressed="false">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">

            <!-- Set màu nền-->

            <solid
                android:color="@color/colorGreen_2" >
            </solid>

            <!-- đặt thuộc tính màu và độ rộng của đường viền -->
            <stroke
                android:width="1dp"
                android:color="@color/black" >
            </stroke>

            <!-- các thuộc tính căn chỉnh-->
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" >
            </padding>

            <!-- và đây là bán kính đường tròn ở 4 góc -->
            <corners
                android:radius="5dp" >
            </corners>

        </shape>
    </item>
</selector>
